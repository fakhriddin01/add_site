<div class="bg-primary mb-5 d-flex flex-wrap align-content-end justify-content-center" style="height: 60px;">
    <form class="form-inline mb-n3" action="/filter_elonlar" method="POST">
        <div class="form-group-inline ml-3">
            <input type="date" class="form-control" name="date" id="date">
        </div>

        <div class="dropdown ml-3">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                Yo'nalish
            </button>
                <div class="dropdown-menu" style="width: 200px;">
                       
                    <input type="checkbox" id="myCheck1" onclick="myFunction1()" style="display: inline-block;" name="yunalish[]" value="Information Technologies">Information Technologies <br>
                   
                        <div id="text1" style="display: none; margin-left: 20px; font-size: small">
                            {{#each IT}}
                                <input type="checkbox" style="display: inline-block;" name="ichki_yunalish[]" value="{{this}}">{{this}} <br>
                            {{/each}}
                        </div>

                    <input type="checkbox" id="myCheck2" onclick="myFunction2()" style="display: inline-block;" name="yunalish[]" value="Grafik Dizayn">Grafik Dizayn <br>
                
                    <div id="text2" style="display: none; margin-left: 20px; font-size: small">
                        {{#each GD}}
                            <input type="checkbox" style="display: inline-block;" name="ichki_yunalish[]" value="{{this}}">{{this}} <br>
                        {{/each}}
                    </div>

                    <input type="checkbox" id="myCheck3" onclick="myFunction3()" style="display: inline-block;" name="yunalish[]" value="SMM">SMM <br>
                
                    <div id="text3" style="display: none; margin-left: 20px; font-size: small">
                        {{#each SMM}}
                            <input type="checkbox" style="display: inline-block;" name="ichki_yunalish[]" value="{{this}}">{{this}} <br>
                        {{/each}}
                    </div>
            
                </div> 
          
        </div> 

        <div class="form-group-inline ml-3">
            
                <select class="form-control masterSelect" id="yunalish" name="format">
                    <option value="" hidden disabled selected>Formatni tanlang</option>
                    <option value="online">Online</option>
                    <option value="offline">Offline</option>
                    <option value="">Hammasi</option>
                </select>
        </div>


        <div class="dropdown ml-3">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                Ism Sharif
            </button>
            {{#if authors.length}}
                <div class="dropdown-menu" style="width: 200px;">
            {{#each authors}}
               
                <input type="checkbox" id="fullname" style="display: inline-block;" name="fullname[]" value="{{this}}">{{this}} <br>
                    
            {{/each}}
                </div> 
            {{/if}}
        </div>  
      
        <button type="submit" class="btn btn-info ml-3">Izlash</button>
    </form>
</div>
<div class="container">
    <h6>Oxirgi elonlar</h6>
{{#if elonlar.length}}
<div class="row">
    {{#each elonlar}}
        <div class="col-3">
        
        <div class="card mb-2 border border-primary" style="width:260px">
            <img class="card-img-top" src="{{image}}" alt="Card image" style="width:100%">
            <div class="card-body">
            <h6 class="card-title">{{fullname}}</h6>
            <h6 class="card-title"> {{yunalish}}</h6>
            <p class="card-text">{{ichki_yunalish}}</p>
            <p class="card-text"><span>Kuni: {{date}};</span> <span> vaqti: {{time}}</span></p>
            <p class="card-text"><span>Formati: {{format}}</span> <span>{{link}}</span></p>
            </div>
        </div>
        </div>
    {{/each}}
        
    {{else}}
        <h1>E'lonlar yo'q</h1>
    {{/if}}
</div>




