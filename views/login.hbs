<h1 class="mt-5 d-flex justify-content-center">Tizimga kirish</h1>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form action="/login_admin" method="POST">
        <div class="form-group">
            
            <input type="text" class="form-control" name="login" placeholder="Login" id="login">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" id="pwd">
        </div>
        {{#if msg}} <p class="text-danger">{{msg}}</p>{{/if}}
        
        <button type="submit" class="btn btn-primary mx-auto">Kirish</button>
        </form>
    </div>
    <div class="col-4">

    </div>
</div>
